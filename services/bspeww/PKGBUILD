# Maintainer: elliot wesoff
pkgname=bspeww
pkgver=0.0.1
pkgrel=1
pkgdesc="watch your bspwm things"
arch=('x86_64')
license=('MIT')
depends=('systemd' 'jq' 'wmctrl')
source=('bspeww_nodes' 'bspeww_desktops')
sha256sums=('SKIP' 'SKIP')

package() {
  dest=$pkgdir/usr/local/bin
  mkdir -p $dest
  install -Dm755 $srcdir/bspeww_nodes $dest/bspeww_nodes
  install -Dm755 $srcdir/bspeww_desktops $dest/bspeww_desktops
}
