#
# wm independent hotkeys
#

super + Return
  kitty

# smaller kitty for coding
super + shift + Return
  kitty -c ~/dotfiles/.config/kitty/kitty.conf \
        -c ~/dotfiles/.config/kitty/condensed.conf

super + alt + Return
  kitty -c ~/dotfiles/.config/kitty/kitty.conf \
        -c ~/dotfiles/.config/kitty/condensed.conf \
        tmux

super + alt + Tab
  kitty htop

super + alt + f
  nautilus

super + alt + v
  vivaldi-stable

super + a
  rofi -show run

XF86LaunchA
  rofi -show run

# there's an issue with polybar where it won't 
# lay over the active windows after first being launched.
# launching it (or trying to launch it) again fixes it.
super + x
  $HOME/dotfiles/.config/polybar/launch.sh & disown

super + z
  polybar-msg cmd toggle

super + Escape
  polybar-msg cmd toggle

super + shift + Escape
  sxhkd-reload

# kill X server
super + control + alt + Escape
  pkill Xorg

super + control + alt + d
  elliot-logout

super + control + alt + z
  elliot-suspend

super + Delete
  elliot-suspend

shift + XF86ScreenSaver
  elliot-suspend

super + control + alt + s
  elliot-shutdown

# switch from external display to internal
super + control + alt + i
  switch-int

# switch from internal display to external
super + control + alt + o
  switch-ext

# use both displays
super + control + alt + p
  switch-int-ext

XF86Search
  kitty ranger

# volume controls
XF86AudioRaiseVolume
  amixer -q sset Master 5%+

XF86AudioLowerVolume
  amixer -q sset Master 5%-

XF86AudioMute
  amixer -q sset Master 1+ toggle

super + F2
  amixer -q sset Master 5%-

super + F3
  amixer -q sset Master 5%+

# heylp! i forgot my other keymappings!
super + F4
  kitty nvim ~/dotfiles/.config/sxhkd/sxhkdrc 

# brightness
super + F7
  pybright down

super + F8
  pybright up

XF86MonBrightnessDown
  pybright down

XF86MonBrightnessUp
  pybright up

# touchpad shenanigans
super + F10
  tp off

super + F11
  tp on

# printscreen button
Print
  flameshot gui
