#
# wm independent hotkeys
#

super + Return
  kitty

# super + shift + Return
#   kitty --config=$HOME/dotfiles/.config/kitty/onehalf-light.conf

super + alt + Return
  kitty tmux

super + alt + Tab
  kitty htop

super + alt + f
  nautilus

super + alt + v
  vivaldi-stable

super + alt + r
  kitty ranger

super + z
  rofi -show run

XF86LaunchA
  rofi -show run

super + Escape
  sxhkd-reload

super + control + alt + l
  elliot-logout

super + control + alt + Delete
  elliot-suspend

XF86ScreenSaver
  elliot-suspend

# kill X server
super + control + alt + Escape
  pkill Xorg

# volume controls
XF86AudioRaiseVolume
  amixer -q sset Master 5%+

XF86AudioLowerVolume
  amixer -q sset Master 5%-

XF86AudioMute
  amixer -q sset Master 1+ toggle

super + F2
  amixer -q sset Master 5%-

super + F3
  amixer -q sset Master 5%+

# heylp! i forgot my other keymappings!
super + F4
  kitty nvim ~/dotfiles/.config/sxhkd/sxhkdrc 

# brightness
super + F8
  cbright down

super + F9
  cbright up

XF86MonBrightnessDown
  cbright down

XF86MonBrightnessUp
  cbright up

# touchpad shenanigans
super + F10
  tp off

super + F11
  tp on

# lemonobar shenanigans
super + d
  xdo hide -a lemonbar

super + alt + d
  xdo show -a lemonbar

