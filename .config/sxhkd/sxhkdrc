#
# wm independent hotkeys
#

#
# program shortcuts
#

# my notes! i can't computer without my notes!
super + F1
  kitty -c ~/dotfiles/.config/kitty/kitty.conf \
        -c ~/dotfiles/.config/kitty/condensed.conf \
        nvim -O \
          ~/dotfiles/.config/sxhkd/sxhkdrc \
          ~/dotfiles/.config/sxhkd/bspwm-sxhkdrc \
          ~/Documents/Notes/arch-notes.md

super + {_,shift} + Return
  exec kitty -c ~/dotfiles/.config/kitty/kitty.conf \
             -c ~/dotfiles/.config/kitty/{condensed,cozy}.conf

super + alt + {f,b,x,d,m,w,space}
  exec {thunar,firefox,firefox,discord,kitty pulsemixer,whatsdesk,rofi -show drun}

super + shift + alt + l
  xset s activate

super + z
  eww-toggle

super + shift + Escape
  sxhkd-reload

super + {Delete,XF86ScreenSaver}
  elliot {suspend,suspend}

super + alt + shift + {0,1,2}
  switch-mon {off,internal,external}

XF86LaunchA
  rofi -show drun

XF86Search
  kitty ranger

# volume controls

XF86AudioRaiseVolume
  elliot volup

XF86AudioLowerVolume
  elliot voldown

XF86AudioMute
  elliot mute

# brightness
super + shift + F1
  blight set -5%

super + shift + alt + Down
  blight set -5%

XF86MonBrightnessDown
  blight set -5%

super + shift + F2
  blight set +5%

XF86MonBrightnessUp
  blight set +5%

super + shift + alt + Up
  blight set +5%

# printscreen button
Print
  flameshot gui

