#
# wm independent hotkeys
#

#
# program shortcuts
#

# my notes! i can't computer without my notes!
super + F1
  kitty nvim -O \
          ~/dotfiles/.config/sxhkd/sxhkdrc \
          ~/dotfiles/.config/sxhkd/bspwm-sxhkdrc \
          ~/Documents/Notes/arch-notes.md

super + {Return,space,z,BackSpace}
  exec {kitty,rofi -show drun,eww-toggle,xset s activate}

super + alt + {f,b,x,d,m,w,Escape}
  exec {thunar,firefox,firefox,discord,kitty pulsemixer,whatsdesk,sxhkd-reload}

super + alt + {0,1,2}
  switch-mon {off,internal,external}

super + control + alt + shift + q
  pkill Xorg

XF86LaunchA
  exec rofi -show drun

XF86Search
  exec kitty ranger

XF86ScreenSaver
  xset s activate

XF86Audio{RaiseVolume,LowerVolume,Mute}
  elliot {volup,voldown,mute}

super + shift + alt + {Up,Down}
  blight set {+5%,-5%}

XF86MonBrightness{Up,Down}
  blight set {+5%,-5%}

Print
  flameshot gui

