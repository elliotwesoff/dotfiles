#
# wm independent hotkeys
#

super + Return
  kitty

super + shift + Return
  kitty --config=$HOME/dotfiles/.config/kitty/light-theme.conf

super + alt + Return
  kitty tmux

super + alt + Tab
  kitty htop

super + alt + f
  nautilus

super + alt + v
  vivaldi-stable

super + z
  rofi -show run

super + Escape
  sxhkd-reload

super + control + alt + l
  elliot-logout

super + control + alt + Delete
  elliot-suspend

# kill X server
super + control + alt + Escape
  pkill Xorg

# volume controls
super + F2
  amixer -q sset Master 5%-

super + F3
  amixer -q sset Master 5%+

# brightness
super + F8
  cbright down

super + F9
  cbright up

# touchpad shenanigans
super + F10
  tp off

super + F11
  tp on

# lemonobar shenanigans
super + d
  xdo hide -a lemonbar

super + alt + d
  xdo show -a lemonbar

