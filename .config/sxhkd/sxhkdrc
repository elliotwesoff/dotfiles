#!/bin/sh
#
# wm independent hotkeys
#

#
# program shortcuts
#

# my notes! i can't computer without my notes!
super + F1
  exec alacritty --command nvim -O \
          ~/dotfiles/.config/sxhkd/sxhkdrc \
          ~/dotfiles/.config/sxhkd/bspwm-sxhkdrc \
          ~/Documents/Notes/arch-notes.md

super + {Return,space,Backspace,Delete}
  exec {alacritty,eww-toggle,xset s activate,systemctl suspend}

super + shift + Return
  exec kitty

super + alt + {t,x,p,z,c,d,m,w,o,r,b,Tab,Escape,space}
  exec {thunar,firefox,firefox --private-window,librewolf,nordvpn c Los_Angeles,discord,alacritty --command pulsemixer,whatsdesk,socials-kill,bspc wm -r,alacritty --command btop,alacritty --command btop,bspc quit,rofi -show drun}

XF86{LaunchA,Search,ScreenSaver,MonBrightnessUp,MonBrightnessDown}
  exec {rofi -show drun,alacritty --command ranger,xset s activate, blight set +5%, blight set -5%}

super + alt + {0,1,2}
  switch-mon {off,internal,external}

super + control + alt + shift + Escape
  pkill Xorg

XF86Audio{RaiseVolume,LowerVolume,Mute}
  elliot {volup,voldown,mute}

super + shift + alt + {Up,Down}
  blight set {+5%,-5%}

Print
  flameshot gui

