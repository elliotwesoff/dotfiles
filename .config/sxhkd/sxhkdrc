#
# wm independent hotkeys
#

# terminal emulator & appies
super + Return
  kitty tmux

super + shift + Return
  kitty

super + control + h
  kitty htop

super + control + r
  kitty ranger

super + control + f
  nautilus

super + control + v
  vivaldi-stable

# program launcher
super + z
  rofi -show run

# make sxhkd reload its configuration files:
super + Escape
  pkill -USR1 -x sxhkd

# log out
super + control + alt + l
  kill -9 -1

# heylp i forgot my key mappings!
super + F1
  kitty nvim ~/dotfiles/.config/sxhkd/sxhkdrc

# volume controls
super + F2
  amixer -q sset Master 5%-

super + F3
  amixer -q sset Master 5%+

# brightness
super + F8
  pybright down

super + F9
  pybright up

#
# berry hotkeys
#

super + {h, j, k, l}
    berryc window_move {-50 0, 0 50, 0 -50, 50 0}

super + shift + {h, j, k, l}
    berryc window_resize {-50 0, 0 50, 0 -50, 50 0}

super + {0-9}
    berryc switch_workspace {0-9}

super + {a, s, d, f}
    berryc switch_workspace {1, 2, 3, 4}

super + shift + {0-9}
    berryc send_to_workspace {0-9}

super + shift + {a, s, d, f}
    berryc send_to_workspace {1, 2, 3, 4}

super + m
    berryc window_monocle

super + space
    berryc fullscreen

super + p
    berryc snap_right

super + o
    berryc snap_left

super + n
    berryc toggle_decorations

super + Tab
    berryc cycle_focus

super + q
    berryc window_close

super + c
    berryc window_center

~button1
    berryc pointer_focus

