#
# wm independent hotkeys
#

#
# program shortcuts
#

super + Return
  exec kitty -c ~/dotfiles/.config/kitty/kitty.conf \
             -c ~/dotfiles/.config/kitty/condensed.conf

super + shift + Return
  exec kitty -c ~/dotfiles/.config/kitty/kitty.conf \
             -c ~/dotfiles/.config/kitty/cozy.conf

super + alt + f
  exec thunar

super + alt + b
  exec firefox

super + alt + x
  exec firefox

super + alt + d
  exec discord

super + alt + m
  exec kitty pulsemixer

super + alt + w
  exec whatsdesk

super + shift + alt + l
  xset s activate

super + a
  rofi -show drun

XF86LaunchA
  rofi -show drun

super + z
  eww-toggle

super + shift + Escape
  sxhkd-reload

super + Delete
  elliot suspend

super + XF86ScreenSaver
  elliot suspend

super + alt + shift + 0
  switch-mon off

super + alt + shift + 1
  switch-mon internal

super + alt + shift + 2
  switch-mon external

XF86Search
  kitty ranger

# volume controls

XF86AudioRaiseVolume
  elliot volup

XF86AudioLowerVolume
  elliot voldown

XF86AudioMute
  elliot mute

# brightness
super + shift + F1
  blight set -5%

super + shift + alt + Down
  blight set -5%

XF86MonBrightnessDown
  blight set -5%

super + shift + F2
  blight set +5%

XF86MonBrightnessUp
  blight set +5%

super + shift + alt + Up
  blight set +5%

# heylp! i forgot my keymappings!
super + F1
  kitty -c ~/dotfiles/.config/kitty/kitty.conf \
        -c ~/dotfiles/.config/kitty/condensed.conf \
        nvim -O \
          ~/dotfiles/.config/sxhkd/sxhkdrc \
          ~/dotfiles/.config/sxhkd/bspwm-sxhkdrc \
          ~/Documents/Notes/arch-notes.md

super + shift + F10
  flameshot gui

# touchpad shenanigans
super + shift + F11
  tp off

super + shift + F12
  tp on

# printscreen button
Print
  flameshot gui
