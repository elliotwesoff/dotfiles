#
# wm independent hotkeys
#

super + Return
  kitty

# super + shift + Return
#   kitty --config=$HOME/dotfiles/.config/kitty/onehalf-light.conf

super + alt + Return
  kitty tmux

super + alt + Tab
  kitty htop

super + alt + f
  nautilus

super + alt + v
  vivaldi-stable

# conflicts with the default
# binding to restart bspwm.
# super + alt + r
#   kitty ranger

super + a
  rofi -show run

XF86LaunchA
  rofi -show run

super + Escape
  sxhkd-reload

super + control + alt + l
  elliot-logout

super + control + alt + Delete
  elliot-suspend

shift + XF86ScreenSaver
  elliot-suspend

# kill X server
super + control + alt + Escape
  pkill Xorg

# volume controls
XF86AudioRaiseVolume
  amixer -q sset Master 5%+

XF86AudioLowerVolume
  amixer -q sset Master 5%-

XF86AudioMute
  amixer -q sset Master 1+ toggle

super + F2
  amixer -q sset Master 5%-

super + F3
  amixer -q sset Master 5%+

# heylp! i forgot my other keymappings!
super + F4
  kitty nvim ~/dotfiles/.config/sxhkd/sxhkdrc 

# brightness
super + F8
  pybright down

super + F9
  pybright up

XF86MonBrightnessDown
  pybright down

XF86MonBrightnessUp
  pybright up

# touchpad shenanigans
super + F10
  tp off

super + F11
  tp on

# lemonobar shenanigans
super + d
  xdo hide -a lemonbar

super + alt + d
  xdo show -a lemonbar

