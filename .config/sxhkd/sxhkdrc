#
# wm independent hotkeys
#

super + Return
  kitty

super + shift + Return
  alacritty

super + alt + Return
  kitty tmux

super + alt + Tab
  kitty htop

super + alt + f
  nautilus

super + alt + v
  vivaldi-stable

super + a
  rofi -show run

XF86LaunchA
  rofi -show run

super + Escape
  sxhkd-reload

# kill X server
super + control + alt + Escape
  pkill Xorg

super + control + alt + d
  elliot-logout

super + control + alt + z
  elliot-suspend

shift + XF86ScreenSaver
  elliot-suspend

super + control + alt + s
  elliot-shutdown

# switch from external display to internal
super + control + alt + i
  ~/dotfiles/.screenlayout/x1-int.sh

# switch from internal display to external
super + control + alt + o
  ~/dotfiles/.screenlayout/x1-ext.sh

# use both displays
super + control + alt + p
  ~/dotfiles/.screenlayout/x1-dual.sh

# volume controls
XF86AudioRaiseVolume
  amixer -q sset Master 5%+

XF86AudioLowerVolume
  amixer -q sset Master 5%-

XF86AudioMute
  amixer -q sset Master 1+ toggle

super + F2
  amixer -q sset Master 5%-

super + F3
  amixer -q sset Master 5%+

# heylp! i forgot my other keymappings!
super + F4
  kitty nvim ~/dotfiles/.config/sxhkd/sxhkdrc 

# brightness
super + F8
  pybright down

super + F9
  pybright up

XF86MonBrightnessDown
  pybright down

XF86MonBrightnessUp
  pybright up

# touchpad shenanigans
super + F10
  tp off

super + F11
  tp on

# lemonobar shenanigans
super + d
  xdo hide -a polybar

super + alt + d
  xdo show -a polybar

# printscreen button
Print
  flameshot gui
