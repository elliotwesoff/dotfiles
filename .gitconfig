[diff]
  tool = nvimdiff
  guitool = kitty.gui
[difftool]
  prompt = false
  trustExitCode = true
[difftool "nvimdiff"]
  cmd = "nvim +\"lua require('lazy').load({ plugins = { 'diffview.nvim' }, wait = true })\" +DiffviewOpen"
[core]
	autocrlf = input
[init]
	defaultBranch = main
