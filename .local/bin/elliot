#!/bin/sh

record_volume() {
  pactl -f json list | jq -c '.sinks[0] | { mute, volume: .volume["front-left"].value_percent }' >> ~/tmp/volume.json
}

case $1 in
  "logout")
    notify-send --expire-time 2500 "logging off!" "user logout in 3, 2, 1!"
    sleep 3s
    pkill -KILL -u elliot
  ;;
  "shutdown")
    notify-send --expire-time 2500 "powering down!" "in 3, 2, 1!"
    sleep 3s
    systemctl poweroff
  ;;
  "suspend")
    notify-send --expire-time 2500 "~*~._.~*zZzZzzZZZzzZzZz*~._.~*~" "sleeping in 3, 2, 1!"
    sleep 3s
    systemctl suspend
  ;;
  ("volup")
    amixer -q sset Master 5%+
    record_volume
  ;;
  ("voldown")
    amixer -q sset Master 5%-
    record_volume
  ;;
  ("mute")
    amixer -q sset Master 1+ toggle
    record_volume
  ;;
esac

