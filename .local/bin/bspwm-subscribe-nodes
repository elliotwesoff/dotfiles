#!/bin/bash
#
# bspwm-subscribe-nodes.sh

mkdir -p ~/.bspeww

bspc subscribe node_add | while read line
do
  echo node added
  echo $line
  bspc wm -d > ~/.bspeww/bspwm-state.json
  curl http://localhost:4567/read
done &

bspc subscribe node_remove | while read line
do
  echo node removed
  echo $line
  bspc wm -d > ~/.bspeww/bspwm-state.json
  curl http://localhost:4567/read
done &

