#!/bin/sh
#
# switch-ext

polybar-msg cmd quit

notify-send --expire-time 2500 "display change" "using only external display in 3... 2... 1..."
sleep 3s

export XORG_DPI=96
echo Xft.dpi: $XORG_DPI | xrdb

source ~/.screenlayout/matts-asus.sh

EXT_MON=$(xrandr -q | grep '^DP-[1-9] connected')
MON=$(echo $EXT_MON | cut -d ' ' -f 1)
bspc monitor $MON -d I II III IV V VI VII

