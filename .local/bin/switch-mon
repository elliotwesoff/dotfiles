#!/bin/sh
#
# switch-mon

notify-send --expire-time 1500 "display change" "using $1 display in 3, 2, 1!"
sleep 2s

case $1 in
  "internal")
    export XORG_DPI=120
    echo Xft.dpi: $XORG_DPI | xrdb
    bspc monitor eDP-1 -d I II III IV V VI VII
    source ~/.screenlayout/framework-int.sh
  ;;
  "external")
    export XORG_DPI=96
    echo Xft.dpi: $XORG_DPI | xrdb
    EXT_MON=$(xrandr -q | grep '^DP-[1-9] connected')
    MON=$(echo $EXT_MON | cut -d ' ' -f 1)
    bspc monitor $MON -d I II III IV V VI VII
    # source ~/.screenlayout/framework-ext.sh
    source ~/.screenlayout/razer-core-x.sh
  ;;
  "dual")
    echo nothing yet!
    notify-send \
      --urgency=critical \
      --expire-time 2000 \
      "display change" \
      "no dual monitor config yet!"
  ;;
esac

polybar-msg cmd quit

