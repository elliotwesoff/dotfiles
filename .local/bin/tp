#!/bin/bash
#
# .local/bin/tp

X_TOUCHPAD="PIXA3854:00 093A:0274 Touchpad"

if  [[ $1 =~ "on" ]]
then
  echo touchpad on
  echo xinput enable "${X_TOUCHPAD}"
  xinput enable "${X_TOUCHPAD}"
  notify-send -t 2000 "hardware" "touchpad enabled."

elif [[ $1 =~ "off" ]]
then
  echo touchpad off
  echo xinput enable "${X_TOUCHPAD}"
  xinput disable "${X_TOUCHPAD}"
  notify-send -t 2000 "hardware" "touchpad disabled."
fi

